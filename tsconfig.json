{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
      "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
